{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "types": ["node", "@playwright/test"],
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ESNext", "DOM"], // Updated to include ESNext for newer features
    "plugins": [{ "name": "tslint-language-service" }]
  }
}
